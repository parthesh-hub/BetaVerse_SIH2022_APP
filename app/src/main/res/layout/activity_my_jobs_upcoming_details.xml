                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/myjobs_details_strdailyWage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toEndOf="@+id/myjobs_details_dailyWageLayout"
                    android:text="Daily Wage"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_bias="0.5"
                    tools:ignore="NotSibling" />

                <TextView
                    android:id="@+id/myjobs_details_dailyWage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="TANVI"
                    android:textAlignment="center"
                    android:layout_below="@+id/myjobs_details_strdailyWage"
                    android:textSize="25sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/myjobs_details_locationLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/myjobs_details_strLocation"
